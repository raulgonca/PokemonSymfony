{% extends 'base.html.twig' %}

{% block title %}Capturar pokemon{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<a href="/"> Volver </a>
<div class="example-wrapper">

    <h1>Hierba alta</h1>
    <a href="/pokemon/showRandomPokemon">Mostrar pokemon</a>

        {# Mostrar pokemon a capturar #}
        {% if pokemon is defined %}
        <h1>Un pokemon apareció</h1>
        <p>Nombre: {{ pokemon.name }}</p>
        <p>Tipo: {{ pokemon.type }}</p>

        <a href="/pokedex/catch/{{ pokemon.id }}"> Lanzar pokeball (60% captura) </a>
        </br>
        <a href="/capture"> Dejar </a>

        {# Mostrar resultado #}
        {% if resultado is defined %}
            {% if resultado == 'exito' %}
                <p class="success">¡Has capturado al Pokémon exitosamente!</p>
            {% elseif resultado == 'fracaso' %}
                <p class="failure">No has podido capturar al Pokémon. ¡Intenta de nuevo!</p>
            {% endif %}
        {% endif %}


    {% endif %}

</div>
{% endblock %}
